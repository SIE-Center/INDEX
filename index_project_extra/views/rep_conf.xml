<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
  <!--Form-->
    <record id="index_project_extra.repconf_form" model="ir.ui.view">
      <field name="name">custom_repconf.form</field>
      <field name="model">custom.repconf</field>
      <field name="arch" type="xml">
        <form string="Configuracion de Envio para Reportes">
        <sheet>
             <group col="2" string="Criterio">
                <field name="name"/>
                <field name="emails_l" />
                <field name="index"  widget="many2many_tags"/>
            </group>
            <group col = "4" name="Rango" string="Rango">
                <field name="sdate" />
                <field name="edate" />
                <field name="u_env" readonly = "1"/>
            </group>
            <group name="Reportes" string="Reportes">
                <field name="rep_1" />
                <field name="rep_2" />
                <field name="rep_3" />
                <field name="rep_4" />
                <field name="rep_5" />
            </group>
            <button name="send_mails" string="Mandar Correos"   class="oe_highlight" type="object" groups = "index_project_extra.group_master_auth"/>
        </sheet>
        </form>
      </field>
    </record>


    <!--View Tree-->
    <record id="index_project_extra.custom_repconf_tree" model="ir.ui.view">
      <field name="name">custom_repconf.tree</field>
      <field name="model">custom.repconf</field>
      <field name="arch" type="xml">
        <tree>
                <field name="name"/>
                <field name="u_env" />
                <field name="emails_l" />
                <field name="index" />
                <field name="rep_1" />
                <field name="rep_2" />
                <field name="rep_3" />
                <field name="rep_4" />
                <field name="sdate" />
                <field name="edate" />
        </tree>
      </field>
    </record>

    <!--Action-->
    <record id="index_project_extra.custom_repconf_action" model="ir.actions.act_window">
      <field name="name">Configuracion de Envio para Reportes</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">custom.repconf</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!--Menu-->
        <menuitem 
        id="index_project_extra.menu_repconf"
        name="Configuracion de Envio para Reportes"
        parent="project.menu_project_report"
        action="index_project_extra.custom_repconf_action"
        sequence="30"
    />
  </data>
</odoo>